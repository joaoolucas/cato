{
  "description": "OP_CAT opcode test vectors - Bitcoin Script compatible",
  "note": "These vectors would produce identical results on a Bitcoin node with OP_CAT enabled (pre-2010 or future re-enablement)",
  "tests": [
    {
      "name": "cat_basic_hello_world",
      "description": "Concatenate 'hello' and 'world' to produce 'helloworld'",
      "initial_stack": [
        "68656c6c6f",
        "776f726c64"
      ],
      "script": "7e",
      "expected_final_stack": [
        "68656c6c6f776f726c64"
      ],
      "comment": "0x68656c6c6f = 'hello', 0x776f726c64 = 'world'"
    },
    {
      "name": "cat_empty_left",
      "description": "Concatenate empty string with 'abc'",
      "initial_stack": [
        "",
        "616263"
      ],
      "script": "7e",
      "expected_final_stack": [
        "616263"
      ],
      "comment": "Empty + 'abc' = 'abc'"
    },
    {
      "name": "cat_empty_right",
      "description": "Concatenate 'abc' with empty string",
      "initial_stack": [
        "616263",
        ""
      ],
      "script": "7e",
      "expected_final_stack": [
        "616263"
      ],
      "comment": "'abc' + Empty = 'abc'"
    },
    {
      "name": "cat_both_empty",
      "description": "Concatenate two empty strings",
      "initial_stack": [
        "",
        ""
      ],
      "script": "7e",
      "expected_final_stack": [
        ""
      ]
    },
    {
      "name": "cat_single_bytes",
      "description": "Concatenate single bytes 0x01 and 0x02",
      "initial_stack": [
        "01",
        "02"
      ],
      "script": "7e",
      "expected_final_stack": [
        "0102"
      ]
    },
    {
      "name": "cat_binary_data",
      "description": "Concatenate arbitrary binary data including null bytes",
      "initial_stack": [
        "00ff00",
        "ff00ff"
      ],
      "script": "7e",
      "expected_final_stack": [
        "00ff00ff00ff"
      ]
    },
    {
      "name": "cat_triple_concat",
      "description": "Three concatenations: 'a' + 'b' + 'c' + 'd'",
      "initial_stack": [
        "61",
        "62",
        "63",
        "64"
      ],
      "script": "7e7e7e",
      "expected_final_stack": [
        "61626364"
      ],
      "comment": "Stack order: bottom['a','b','c','d']top. First CAT: 'c'+'d'='cd'. Second: 'b'+'cd'='bcd'. Third: 'a'+'bcd'='abcd'"
    },
    {
      "name": "cat_with_dup",
      "description": "DUP then CAT to double a string",
      "initial_stack": [
        "414243"
      ],
      "script": "767e",
      "expected_final_stack": [
        "414243414243"
      ],
      "comment": "DUP 'ABC', then CAT produces 'ABCABC'"
    },
    {
      "name": "cat_max_element_size",
      "description": "Concatenate two 260-byte elements to get 520-byte result (max allowed)",
      "initial_stack": [
        "",
        ""
      ],
      "script": "7e",
      "expected_final_stack": [
        ""
      ],
      "comment": "Two 260-byte elements concatenate to exactly 520 bytes (Bitcoin max element size)"
    },
    {
      "name": "cat_underflow_empty_stack",
      "description": "OP_CAT with empty stack should fail",
      "initial_stack": [],
      "script": "7e",
      "expected_error": "StackUnderflow"
    },
    {
      "name": "cat_underflow_one_element",
      "description": "OP_CAT with only one element should fail",
      "initial_stack": [
        "deadbeef"
      ],
      "script": "7e",
      "expected_error": "StackUnderflow"
    },
    {
      "name": "cat_preserves_other_stack",
      "description": "CAT should not affect elements below the top two",
      "initial_stack": [
        "aabbcc",
        "1122",
        "3344"
      ],
      "script": "7e",
      "expected_final_stack": [
        "aabbcc",
        "11223344"
      ],
      "comment": "Bottom element 'aabbcc' is preserved"
    }
  ]
}
